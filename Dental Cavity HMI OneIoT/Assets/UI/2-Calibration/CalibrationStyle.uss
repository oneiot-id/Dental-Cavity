/*    transition-duration: 200ms;*/
/*}*/

.retry-button{
    margin: 0 23px;
    background-image: url("/Assets/Assets/Calibration/retry button.png");
    width: 60px;
    height: 60px;
    opacity: 1;
    transition-duration: 200ms;
}

.retry-button:hover{
    opacity: 0.8;
    transition-duration: 200ms;
}

.save-button{
    margin: 0 23px;
    background-image: url("/Assets/Assets/Calibration/Next Button.png");
    width: 60px;
    height: 60px;
    opacity: 1;
    transition-duration: 200ms;
}

.save-button:hover{
    opacity: 0.8;
    transition-duration: 200ms;
}

.visible{
    visibility: visible;
}

.hidden{
    width: 0px;
    height: 0px;
    visibility: hidden;
}

